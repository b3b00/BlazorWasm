@page "/counter"

<h1>Counter</h1>

<p>Current count: @(currentCount * 1)</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me, I'm famous...</button>

@code {
    
    [Parameter]
    public int IncrementAmount { get; set; } = 1;
    
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount += IncrementAmount;
    }
}
